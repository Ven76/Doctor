<h3>Make an appointment</h3>
<hr />

<%= form_for @appointment do |f| %>
  <div class="input-field">
    <%= f.label :patient %>
    <br>
    <%= f.collection_select :patient_id, Patient.all, :id, :full_name, prompt: true %>
  </div>

  <div class="input-field">
    <%= f.label :doctor %>
    <br>
    <%= f.collection_select :doctor_id, Doctor.all, :id, :full_name, prompt: true %>
  </div>

  <div class="input-field">
    <%= f.label :date %>
    <br>
    <%= f.text_field :appointment_date, class: 'datepicker' %>
  </div>

  <div class="input-field">
    <%= f.submit nil, class: 'btn' %>
  </div>
<% end %>

<hr />
