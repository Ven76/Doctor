
<h3>Patient: <%= @patient.full_name %> </h3>



<% if @appointments.any? %>
    <h4> Doctors </h4>
    <ul>
      <% @patient.appointments.each do |appointment| %>
        <li>
          <%= appointment.doctor.full_name %> - <%= appointment.appointment_date %> -
          <%= link_to 'Remove', appointment_path(appointment), method: :delete, data: {confirm: 'Really remove this appointment?'} %>
        </li>
      <% end %>
    </ul>
<% else %>
  <h4>No Appointments Found</h4>
<% end %>

<%= link_to 'All Patients', patients_path %> |
<%= link_to 'Edit', edit_patient_path(@patient) %>
